<%- include('../partials/header') %>

    <main class="admin-container admin">
            <h1 class="admin__tittle admin__tittle--user">INGRESAR A MI CUENTA</h1>

            <form class="form-container admin__form" action="">
                <div class="admin__box">
                    <label class="admin__label" for="email">Email:</label>
                    <input class="admin__input" type="email" name="email" id="email" spellcheck="false" placeholder="johndoe@correo.com" required>
                </div>
    
                <div class="admin__box">
                    <label class="admin__label" for="password">Contraseña:</label>
                    <input class="admin__input admin__input--password" type="password" name="password" id="password" placeholder="&bull; &bull; &bull; &bull; &bull; &bull; &bull; &bull;" required>  
                </div>
    
                <div class="admin__box admin__box--submit">
                    <input class="admin__btn" type="submit" value="Ingresar">
    
                    <label class="checkbox checkbox--admin" for="recordarme"> <!-- Checkbox personalizado "NUEVO" -->
                        <input class="checkbox__input" type="checkbox" id="recordarme" name="recordarme" value="recordarme">
                        <span class="checkbox__span"></span>
                        <p class="checkbox__text">Recordarme</p>
                    </label>
                </div>
    
                <a class="admin__link" href="#">Olvidé mi contraseña</a>
            </form>
    </main>

<%- include('../partials/footer') %>